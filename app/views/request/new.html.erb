<h2>New Request</h2>
<%= form_for(@request) do |f| %>
    <div class="form group">
      <%= f.label "What are you looking for?" %><br>
      <%= f.text_field :item %></span>
    </div>
    <div class="form group">
      <%= f.label :item_url %><br>
      <%= f.text_field :item_url %></span>
    </div>
    <div class="form group">
      <%= f.label "When are you able to start receiving your item?" %><br>
      <%= f.date_field :start_date %></span>
    </div>
    <div class="form group">
      <%= f.label "When's the latest you can accept your item?"%><br>
      <%= f.date_field :end_date %></span>
    </div>
    <div class="form group">
      <%= f.label "What are you willing to pay?"%><br>
      <%= f.date_field :amount %></span>
    </div>
    <div class="actions" id="addHLG">
      <%= f.submit 'Add', :class => 'btn btn-success' %>
    </div>

<% end %>
</form>
